{
    "manifest_version": 2,
    "name": "amzn shrtnr",
    "version": "0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches":  [
            "https://*.amazon.com/*",
            "https://amazon.com/*"
        ],
        "js":       ["content.js"],
        "run_at":   "document_end"
    }],
    "permissions": [
        "tabs",
        "https://*.amazon.com/*"
    ]
}
